#click-area-wrapper {
	z-index: 1;
	position: absolute;
	width: 100%;
	top: 3rem;
}
.board-wrapper {
	display: flex;
	justify-content: center;
	align-items: center;
	height: 70vh;
	margin: 0;	
}
.target {
    position: relative;
    width: 95vw; /* 90% del ancho de la ventana */
    height: 95vw; /* Mantén la diana cuadrada */
    max-width: 500px; /* Límite máximo para pantallas grandes */
    max-height: 500px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 auto; /* Centra la diana horizontalmente */
}

.circle {
    position: absolute;
    border-radius: 50%;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: flex-end; /* Ajusta el número a la parte inferior */
    color: white;
    font-weight: bold;
}

.circle:first-child {
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.5); /* Sombra suave */
	border: 1px solid grey; 
}

.circle:nth-child(odd) { background: red; color: #283747; } /* Rojo */
.circle:nth-child(even) { background: white; color: white; } /* Blanco */

.circle:nth-child(1) {
    width: 100%;
    height: 100%;
}
.circle:nth-child(2) {
    width: 92%;
    height: 92%;
}
.circle:nth-child(3) {
    width: 84%;
    height: 84%;
}
.circle:nth-child(4) {
    width: 76%;
    height: 76%;
}
.circle:nth-child(5) {
    width: 68%;
    height: 68%;
}
.circle:nth-child(6) {
    width: 60%;
    height: 60%;
}
.circle:nth-child(7) {
    width: 52%;
    height: 52%;
}
.circle:nth-child(8) {
    width: 44%;
    height: 44%;
}
.circle:nth-child(9) {
    width: 36%;
    height: 36%;
}
.circle:nth-child(10) {
    width: 28%;
    height: 28%;
}

.circle .number {
    display: inline-block;
	user-select: none;
	line-height: 14px;
}

@keyframes bounce {
    0% {
        transform: scale(0.8);
	}
    50% {
        transform: scale(1.2);
	}
    100% {
        transform: scale(1);
	}
}

.number-animate {
    animation: bounce 0.6s ease-out;
	transform-origin: center;
}

@keyframes lightenBackground {
    0% {
        background-color: gold; /* Destello de dorado al principio */
    }
    100% {
        background-color: black;
    }
}

.circle-highlight:nth-child(odd) {
 	background-color: #283747;
}

.circle-highlight:nth-child(even) {
 	background-color: #d4ac0d;
}

#start-btn {
    position: absolute;
	width: 14vw;
	height: 14vw;
    font: bold 1.2em Arial;
    color: #fff;
    background: linear-gradient(to top, #f00 50%, #ff6666 50%); /* Gradiente para simular el reflejo */
    border-radius: 50%;
    box-shadow: inset 0 -5px 20px rgba(0,0,0,0.5), inset 0 15px 20px rgba(255,255,255,0.5), /* Sombras internas */
                0 0 10px rgba(0,0,0,0.3); /* Sombra exterior suave */
    cursor: pointer;
    transition: all 0.1s ease;
	border: 6px solid #9a0404;
}

#start-btn:hover {
    transform: scale(1.05); /* Ligero aumento al pasar el mouse */
}

#start-btn:active {
    transform: scale(0.95); /* Reducir ligeramente para simular presión */
    box-shadow: 
        inset 0 0px 25px rgba(0, 0, 0, 0.7	), /* Más intenso hacia adentro */
        inset 0 10px 25px rgba(255, 255, 255, 0.3); /* Más claro */
	background: linear-gradient(to top, #f00 50%, #ff6666 50%);    
}


/* Ajustes específicos para pantallas pequeñas (móviles) */
@media (max-width: 768px) {
	
    #start-btn {
        width: 19vw;
        height: 19vw;
        max-width: 90px;
        max-height: 90px;
    }
}

